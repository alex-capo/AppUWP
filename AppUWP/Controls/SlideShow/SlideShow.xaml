<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AppUWP.Controls">

    <Style TargetType="controls:SlideShow">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SlideShow">
                    <Grid Name="container">
                        <Grid.Clip>
                            <RectangleGeometry x:Name="clip" />
                        </Grid.Clip>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
